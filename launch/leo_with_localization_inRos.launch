<launch>


  <node pkg="leo_driving" type="checkLocal" name="checkLocal" output="screen">
    <param name="detectionRadius" value="1.0"  /> 
  </node>


<include file="$(find leo_navigation)/launch/amcl.launch">
  </include> 

<include file="$(find leo_navigation)/launch/odometry.launch">
  </include> 

  <node name="rplidarNode"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  <param name="serial_port"         type="string" value="/dev/rplidar_front"/>
  <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->

  <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
  <param name="output_scan"         type="string" value="scan"/>
  </node>

  <node name="rplidarNode2"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
  <param name="serial_port"         type="string" value="/dev/rplidar_up"/>
  <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
  <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
  <param name="frame_id"            type="string" value="laser"/>
  <param name="inverted"            type="bool"   value="false"/>
  <param name="angle_compensate"    type="bool"   value="true"/>
  <param name="output_scan"         type="string" value="/up_scan"/>
  </node>


<node pkg="tf" type="static_transform_publisher" name="base_link_to_rp" args="0 0 0.0 0 0 0 base_link laser 10" />

</launch>
